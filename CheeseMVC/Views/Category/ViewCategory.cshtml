@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.title</h1>

<ul>
    @foreach (var chz in Model)
    {
        <li>@chz.Name</li>
    }
</ul>

@if (Model.Count == 0)
{
    <p><strong>No cheeses in this category!</strong></p>
}

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>