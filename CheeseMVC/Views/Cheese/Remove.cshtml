@{
}

<h1>Remove Cheeses</h1>

@if (ViewBag.Cheeses.Count == 0)
{
    <p>No cheeses yet.</p>
}

<form method="post">
    <table>
    @foreach (Cheese cheese in ViewBag.cheeses)
    {
        <tr>
            <td><h4>@cheese.Name: </h4></td>
            <td><input type="checkbox" name="cheeseName" value="@cheese.Name"/></td>
        </tr>
    }
        <tr>
            <td><input type="submit" value="Remove Cheese" /></td>
        </tr>
     </table>

    <br /><br />
    
    <select name="cheeseName">
    @foreach (Cheese cheese in ViewBag.cheeses)
    {
     <option name="@cheese.Name">@cheese.Name</option>        
    }
    </select>
    <input type="submit" value="Remove Cheese" />
</form>