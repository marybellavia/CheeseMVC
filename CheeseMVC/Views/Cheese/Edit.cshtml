@model CheeseMVC.ViewModels.AddEditCheeseViewModel

<h1>Edit Cheese: @Model.Name (id=@Model.CheeseId)</h1>

<form asp-controller="Cheese" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name">Cheese Name: </label>
        <input class="form-control" asp-for="Name" type="text" value="@Model.Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Cheese Description: </label>
        <input class="form-control" asp-for="Description" type="text" value="@Model.Description"/>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating: </label>
        <input class="form-control" asp-for="Rating" />
        <span asp-validation-for="Rating"></span>
    </div>

    <input type="submit" value="Edit Cheese" />
   
    <input type="hidden" value="@Model.CheeseId" name="cheeseId" />
</form>

