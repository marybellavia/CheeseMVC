@model List<CheeseMVC.Models.Cheese>


<h1>My Cheeses</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a> || <a asp-controller="Cheese" asp-action="Remove">Remove Cheese</a></p>

@if (Model.Count == 0)
{
    <p>No cheeses yet.</p>
}

<form method="post">
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Edit Option</th>
        </tr>
        @foreach (var cheese in Model)
        {
            <tr>
                <td>@cheese.Name</td>
                <td>@cheese.Description</td>
                <td>@cheese.Type</td>
                <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.CheeseId">edit</a></td>
            </tr>
        }
    
    </table>
    
</form>